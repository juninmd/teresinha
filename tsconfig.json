{
  "compilerOptions": {
    "baseUrl": "./",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "stripInternal": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    ".vscode",
    "node_modules",
    "test"
  ]
}
